<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rental.geniecar.point.dao.PointDao">

	<insert id="createNewPoint" parameterType="String">
		INSERT INTO POINT(NO, POINT, INCREASE, HISTORY, CURRENT_POINT, TOTAL_USE_POINT, MEMBER_ID) 
		VALUES(SEQ_POINT_NO.NEXTVAL , 0, '+', 'new', 0, 0, #{memberId})
	</insert>

	<select id="selectAll">
		SELECT * FROM POINT WHERE MEMBER_ID = #{memberId}
	</select>
	
	<delete id="delete" parameterType="String">
		DELETE POINT WHERE MEMBER_ID = #{memberId}
	</delete>
</mapper>