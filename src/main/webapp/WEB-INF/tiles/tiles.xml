<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- 타일즈 기본 레이아웃 지정 (변경되지 않는 부분) -->
    <definition name="baseLayout"  template="/WEB-INF/views/layout/layout.jsp">
        <!-- 타이틀은 매핑명에 따라 변경 -->
        <put-attribute name="title" value="" />
        <!-- header에 header.jsp 연동 -->
        <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
        <!-- 바디는 매핑명에 따라 변경 -->
        <put-attribute name="body" value="" />
        <!-- footer에 footer.jsp 연동 -->
        <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
    </definition>

    <!-- viewName 따른 title과 body 연결 -->

    <definition name="/" extends="baseLayout">
        <put-attribute name="title" value="인덱스" />
        <put-attribute name="body" value="/WEB-INF/views/index.jsp" />
    </definition>




    <definition name="reservation/*" extends="baseLayout">
        <put-attribute name="title" value="예약" />
        <put-attribute name="body" value="/WEB-INF/views/reservation/{1}.jsp" />
    </definition>

    <definition name="*/*" extends="baseLayout">
        <put-attribute name="title" value="게시판목록창" />
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>

</tiles-definitions>